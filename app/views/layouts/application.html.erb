<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= render "layouts/themes/#{Rails.application.secrets.theme}/head" %>
  </head>

  <body>
    <%= render "layouts/themes/#{Rails.application.secrets.theme}/header" %>

    <%= yield %>

    <%= render "layouts/themes/#{Rails.application.secrets.theme}/footer" %>
  </body>
</html>

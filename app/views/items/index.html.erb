<h1>Files</h1>

<% @items.each do |item| %>
<div style="float: left; min-width: 200px; min-height: 200px;">
  <% if item.image? %>
  <%= link_to item do %><%= image_tag item.file.url( :thumbnail, false ) %><% end %>
  <% else %>
  <%= link_to item do %><%= image_tag "/themes/#{Rails.application.secrets.theme}/images/default-file-icon.png" %><% end %>
  <% end %>
  <br>
  <%= link_to item do %><%= item.file_file_name %><% end %>
  <br>
  <%= link_to 'Show',   item %>
  <%= link_to 'Edit',   edit_item_path(item) %>
  <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>

<div style="clear: both;"></div>

<%= button_to 'Upload new file', new_item_path, method: :get %>
